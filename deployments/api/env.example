# Environment variables for API service in Dokploy
# Copy these to the environment variables section in Dokploy UI

# Database Connection (adjust service name to match your database service in Dokploy)
POSTGRES_HOST=retailflux-database
POSTGRES_DB=retailflux_prod
POSTGRES_USER=retailflux
POSTGRES_PASSWORD=your_secure_password_here

# API Configuration
APP_ENV=production
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=api.retailflux.de
CORS_ORIGINS=https://retailflux.de,https://www.retailflux.de

# Security & Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO
DEBUG=false

# AI Features (when ready)
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_AI_FEATURES=false

# Rate Limiting & API Management (for future monetization)
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT=100/hour
PREMIUM_RATE_LIMIT=1000/hour

# Health Check
ENABLE_MONITORING=true