# Environment variables for Scraper service in Dokploy
# Copy these to the environment variables section in Dokploy UI

# Database Connection (same as API service)
POSTGRES_HOST=retailflux-database
POSTGRES_DB=retailflux_prod
POSTGRES_USER=retailflux
POSTGRES_PASSWORD=your_secure_password_here

# Scraper Configuration
APP_ENV=production
SCRAPER_MODE=single
SCRAPER_ARGS=--market edeka --max-items 1000
LOG_LEVEL=INFO

# Scraper Performance Settings
SCRAPER_CONCURRENT_REQUESTS=8
SCRAPER_DOWNLOAD_DELAY=1
SCRAPER_MAX_ITEMS=0
SCRAPER_MAX_PAGES=0
SCRAPER_TEST_MODE=false

# Scheduled Mode Settings (if SCRAPER_MODE=scheduled)
SCRAPER_INTERVAL=4h
SCRAPER_SLEEP=14400

# Security & Monitoring
SENTRY_DSN=your_sentry_dsn_here
DEBUG=false

# AI Features (when ready)
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_AI_FEATURES=false

# Market Configuration
ENABLED_MARKETS=edeka
DEFAULT_MARKET=edeka